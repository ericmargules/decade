<div id="breadcrumb">
	<%= link_to '← Back to Catalog', catalog_path %>
</div>
<div id="product_images">
  <div class="owl-carousel">
		<div><%= image_tag(@product.main_image(:medium), :alt => @product.name) %></div>
		<div><%= image_tag(@product.interior_image(:medium), :alt => @product.name) %></div>
		<div><%= image_tag(@product.context_image(:medium), :alt => @product.name) %></div>
	</div>
</div>

<div id="product_info">
  <h1><%= @product.name %></h1><br>

  <%= number_to_currency(@product.price, :unit => '$') %>
  <a href="/cart/<%= @product.id %>?type=product">Add to Cart</a><br>
  <%= @product.short_description %><br>
  <p>Dimensions: <%= @product.dimensions %></p>
  <p>Category: <%= @product.category %></p>  
  <p>Tags: <%= @product.tags %></p>
</div>

