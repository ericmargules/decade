<div id="breadcrumb">
	<%= link_to '← Back to Catalog', catalog_path %>
</div>
<div id="product_images">
  <div class="owl-carousel">
		<div><%= image_tag(@product.main_image(:medium), :alt => @product.name) %><div class="item" data-hash="zero"></div></div>
		<div><%= image_tag(@product.interior_image(:medium), :alt => @product.name) %><div class="item" data-hash="one"></div></div>
		<div><%= image_tag(@product.context_image(:medium), :alt => @product.name) %><div class="item" data-hash="two"></div></div>
	</div>
	<a class="button secondary url" href="#zero">interior</a>
	<a class="button secondary url" href="#one">exterior</a>
	<a class="button secondary url" href="#two">context</a>
</div>

<div id="product_info">
  <h1><%= @product.name %></h1><br>

  <%= number_to_currency(@product.price, :unit => '$') %>
  <a href="/cart/<%= @product.id %>?type=product">Add to Cart</a><br>
  <%= @product.short_description %><br>
  <p>Dimensions: <%= @product.dimensions %></p>
  <p>Category: <%= @product.category %></p>  
  <p>Tags: <%= @product.tags %></p>
</div>

