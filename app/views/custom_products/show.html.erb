<div id="breadcrumb">
  <%= link_to '← Back to Cart', cart_path %>
</div>

<div id="product_images">
  <%= image_tag(@custom_product.imgurl, width: '470px') %>
</div>

<div id="product_info">
  <div class="page_title">
    <h1><%= @custom_product.name %></h1>
  </div>
  <text id="price"><%= number_to_currency(@custom_product.price, :unit => '$') %></text>&nbsp; <%= link_to 'Edit', edit_custom_product_path(@custom_product.id) %><br>

  <p>
    <strong>Options:</strong>
    <%= @custom_product.options %>
  </p>
</div>