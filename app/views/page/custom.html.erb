<div class="page_title">
  <h1>Design Your Own</h1>
</div>

<div id="main_content">
  <% custom_products = {"Billfold" => "200"} %><!--  , "Card Wallet" => "150", "ID Wallet" => "80", "Notebook" => "120"} %> -->

  <div id="product_list">
    <% custom_products.each do |product, price| %>
      <%= link_to builder_path(:category => product) do %>
      	<div class="product_tile">
          <%= image_tag("/assets/site/custom_" + product.downcase + ".png", :class => "catalog_image" , :alt => product) %>
        	<div class="product_info">
          	<div class="product_title"><%= product %></div>
          	<div class="custom_price">From <%= number_to_currency(price, :unit => '$') %></div><br>
      		</div>
      	</div>
      <% end %>
    <% end %>
  </div>
</div>